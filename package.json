{
  "name": "threads-auto-posting-system",
  "version": "1.0.0",
  "description": "Threads 半自動發文系統 with AI-powered content generation",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently -n \"API,Worker\" -c \"cyan,magenta\" \"ts-node-dev --respawn --transpile-only src/index.ts\" \"ts-node-dev --respawn --transpile-only src/worker.ts\"",
    "dev:api": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:worker": "ts-node-dev --respawn --transpile-only src/worker.ts",
    "build": "tsc && node scripts/copy-public.js",
    "start": "node dist/database/migrate.js && node dist/database/seed.js && concurrently -n \"API,Worker\" -c \"cyan,magenta\" \"node dist/index.js\" \"node dist/worker.js\"",
    "start:api": "node dist/index.js",
    "start:worker": "node dist/worker.js",
    "worker": "ts-node-dev --respawn --transpile-only src/worker.ts",
    "migrate": "ts-node src/database/migrate.ts",
    "migrate:prod": "node dist/database/migrate.js",
    "seed": "ts-node src/database/seed.ts",
    "seed:prod": "node dist/database/seed.js",
    "setup": "npm run migrate && npm run seed",
    "cleanup": "node scripts/cleanup-test-data.js",
    "setup-timeslots": "node scripts/setup-time-slots.js",
    "verify-schema": "node scripts/verify-database-schema.js",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "insights:test": "node scripts/quick-test-insights.js",
    "insights:info": "node scripts/get-token-info.js",
    "check-threads-account": "node scripts/fix-threads-account-id.js",
    "diagnose": "node scripts/diagnose-publish-flow.js",
    "diagnose:full": "node scripts/diagnose-statistics-and-ucb.js",
    "sync:insights": "node scripts/direct-sync-insights.js",
    "check:scheduler": "node scripts/check-scheduler-status.js",
    "set-default-account": "node scripts/set-default-account.js",
    "migrate:statistics": "ts-node src/database/migrations/create-statistics-tables.ts",
    "migrate:statistics:prod": "node dist/database/migrations/create-statistics-tables.js",
    "verify:migration": "node scripts/verify-and-migrate.js",
    "cleanup:statistics": "node scripts/cleanup-statistics-tables.js",
    "check:posts-structure": "node scripts/check-posts-table-structure.js",
    "check:all-structures": "node scripts/check-all-table-structures.js",
    "list:tables": "node scripts/list-all-tables.js",
    "check:timeslots": "node scripts/check-timeslots.js",
    "enable:timeslots": "node scripts/enable-timeslots.js",
    "fix:add-active-days": "node scripts/add-active-days-column.js"
  },
  "keywords": [
    "threads",
    "automation",
    "ai",
    "content-generation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "@line/bot-sdk": "^9.0.0",
    "@sparticuz/chromium": "^143.0.4",
    "@types/cheerio": "^0.22.35",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.3",
    "bullmq": "^4.15.0",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "google-auth-library": "^10.5.0",
    "google-trends-api": "^4.9.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "openai": "^4.20.1",
    "puppeteer": "^24.35.0",
    "puppeteer-core": "^24.36.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "knex": "^3.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
